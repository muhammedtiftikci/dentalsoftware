@active

SELECT [ID]
                                   ,[NAME]
                                   ,[SURNAME]
                                   ,[ADDRESS]
                                   ,[PHONE_NUMBER]
                                   ,[BOOK_NAME]
                                   ,[BOOK_PAGE]
                                   ,[CREATED_DATE]
                                   ,[MODIFIED_DATE]
                             FROM PATIENT
                             WHERE [ACTIVE] = @active